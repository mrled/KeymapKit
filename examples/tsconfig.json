{
  "compilerOptions": {
    "target": "es2022",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}