{% macro renderNav(items) %}
  <ul>
    {% for item in items %}
      <li>
        <a href="{{ item.url | url }}">{{ item.title }}</a>
        {% if item.children %}
          {{ renderNav(item.children) }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}

