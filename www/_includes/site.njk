{% macro renderNav(items) %}
  <ul>
    {% for item in items %}
      <li>
        {% if item.url %}
          <a href="{{ item.url }}">{{ item.title }}</a>
          {% if item.children %}
            {{ renderNav(item.children) }}
          {% endif %}
        {% else %}
          {{ item.title }}
          {% if item.children %}
            {{ renderNav(item.children) }}
          {% endif %}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}

