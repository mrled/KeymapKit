{
  "name": "clickmap",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "lintall": "eslint .",
    "component:build": "rm -rf dist/webcomponent && esbuild --bundle --sourcemap --format=esm --global-name=KeymapDotClick --outdir=dist/webcomponent src/index.ts",
    "testsite:separate": "(rm -rf dist/separate || true) && mkdir -p dist/separate && npm run component:build && cp -r dist/webcomponent dist/separate/keymap.click && cp sites/separate/index.html dist/separate/ && node scripts/nodeserver.cjs dist/separate",
    "testsite:simple": "esbuild --bundle --watch --outfile=sites/simple/keymap.click.js --format=esm --sourcemap --loader:.css=text --servedir=sites/simple/ src/index.ts",
    "website:dev": "vite sites/keymap.click",
    "website:build": "vite build --emptyOutDir --outDir ../../dist/keymap.click sites/keymap.click",
    "website:preview": "vite preview sites/keymap.click"
  },
  "dependencies": {
    "fathom-client": "^3.0.0",
    "loglevel": "^1.7.0",
    "vite": "^5.1.5",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "esbuild": "^0.20.2",
    "eslint": "^7.9.0",
    "prettier": "2.1.1",
    "typescript": "^5.4.2"
  }
}
