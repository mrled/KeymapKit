{
  "compilerOptions": {
    "target": "es2023",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "lib": ["ES2023"],
    "allowJs": true,
    "incremental": false,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": "./src",

    "noEmit": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./src"]
}
